---
const { figures } = Astro.props;
---

<section class="overflow-none col-span-full max-h-screen figures w-full bg-black/10 my-8">
  <div class="flex flex-nowrap overflow-x-scroll py-6 px-8">
    {
      figures.map((figure, index) => (
        <figure class={`m-0 p-0 flex-none ${index != figures.length - 1 && "pr-12"}`}>
          {figure.srcType === "image" && <img src={figure.src} alt={figure.caption} />}
          <figcaption>{figure.caption}</figcaption>
        </figure>
      ))
    }
  </div>
</section>
