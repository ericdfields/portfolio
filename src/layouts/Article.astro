---
import Layout from "./Layout.astro";
export interface Props {
  title: string;
  category: string;
}

const { title, category } = Astro.props;
---

<Layout title={title}>
  <main class="py-16 sm:py-24">
    <article class="grid grid-cols-1 prose prose-lg xl:prose-xl max-w-none">
      <header class="w-full">
        <span class="font-bold uppercase text-lime-300">{category}</span>
        <h1>{title}</h1>
      </header>
      <slot />
    </article>
  </main>
</Layout>
